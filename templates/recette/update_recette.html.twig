{% extends 'base.html.twig' %}

{% block title %}Modifaction d'une recette{% endblock %}

{% block body %}
    {{ form_start(form) }} 
        <div {{ stimulus_controller('form-collection') }} 
            data-form-collection-index-value="{{ form.etapes|length > 0 ? form.etapes|last.vars.name + 1 : 0 }}" 
            data-form-collection-prototype-value="{{ form_widget(form.etapes.vars.prototype)|e('html_attr') }}" > 
        <ul {{ stimulus_target('form-collection', 'collectionContainer') }}>
        
        </ul> 
        <button type="button" {{ stimulus_action('form-collection', 'addCollectionElement') }}>Add a tag</button> </div>
        {{ form_row(form) }}
        
    {{ form_end(form) }}
{% endblock %}